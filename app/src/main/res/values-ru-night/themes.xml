<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Notes" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="AppTitleColor">
        <item name="android:textColor">@color/light</item>
    </style>
    <style name="TextColor">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/dark_gray</item>
    </style>
    <style name="TimerTextColor">
        <item name="android:textColor">@color/light</item>
        <item name="android:textColorHint">@color/white</item>
    </style>
    <style name="OptionsTextColor">
        <item name="android:textColor">@color/orange</item>
    </style>
    <style name="Picker">
        <item name="np_textColor">@color/light</item>
        <item name="np_selectedTextColor">@color/light</item>
    </style>

    <style name="Background">
        <item name="android:background">@color/black</item>
    </style>

    <style name="CardCorner">
        <item name="cardCornerRadius">30dp</item>
    </style>
    <style name="AudioCardBackground" parent="CardCorner">
        <item name="cardBackgroundColor">@color/dark</item>
    </style>
    <style name="Options" parent="CardCorner">
        <item name="cardBackgroundColor">@color/dark</item>
    </style>
    <style name="Stroke" parent="CardCorner">
        <item name="cardBackgroundColor">@color/dark</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">2dp</item>
    </style>
    <style name="AudioStroke" parent="TimerTextColor">
        <item name="android:background">@drawable/audio_name_night</item>
    </style>
    <style name="Cancel" parent="TimerTextColor">
        <item name="android:background">@drawable/cancel_night</item>
    </style>
    <style name="Save" parent="TimerTextColor">
        <item name="android:background">@drawable/save_night</item>
    </style>

    <style name="AddNote">
        <item name="android:src">@drawable/day_add</item>
    </style>
    <style name="AddAudioNote">
        <item name="android:src">@drawable/day_micro</item>
    </style>
    <style name="MenuImage">
        <item name="android:background">@drawable/menu_night</item>
    </style>
    <style name="RadioButton" parent="AppTitleColor">
        <item name="android:buttonTint">@color/white</item>
    </style>
    <style name="BackButton">
        <item name="android:src">@drawable/back_night</item>
    </style>
    <style name="TrashButton">
        <item name="android:src">@drawable/delete_night</item>
    </style>
    <style name="ArchiveButton">
        <item name="android:src">@drawable/archive_night</item>
    </style>
    <style name="ReturnItemButton">
        <item name="android:src">@drawable/return_item_night</item>
    </style>
    <style name="ImportantButton">
        <item name="android:background">@drawable/important_note_check_night</item>
        <item name="android:buttonTint">@color/white</item>
    </style>

</resources>