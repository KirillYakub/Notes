<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Notes" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:statusBarColor">@color/light</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="TextColor">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/dark_gray</item>
    </style>

    <style name="Background">
        <item name="android:background">@color/light</item>
    </style>

    <style name="CardCorner">
        <item name="cardCornerRadius">30dp</item>
    </style>

    <style name="Stroke" parent="CardCorner">
        <item name="cardBackgroundColor">@color/light</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="AddNote">
        <item name="android:src">@drawable/day_add</item>
    </style>
    <style name="AddAudioNote">
        <item name="android:src">@drawable/day_micro</item>
    </style>
    <style name="MenuImage">
        <item name="android:background">@drawable/main_menu</item>
    </style>

</resources>